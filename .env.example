# Application
ENV=dev
DEBUG=true
APP_NAME=Insights API
VERSION=1.0.0
API_PREFIX=/api/v1

# Frontend
FRONTEND_URL=http://localhost:3000

ENV=dev
DEBUG=true

# Database
POSTGRES_DB=insights
POSTGRES_USER=insights_user
POSTGRES_PASSWORD=insights_pass
POSTGRES_PORT=5432
DB_URL=postgresql+asyncpg://insights_user:insights_pass@localhost:5432/insights

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0
ARQ_REDIS_URL=redis://localhost:6379/

# Auth & Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Docker ports
API_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379

# Monitoring tools ports
PGADMIN_PORT=8080
PGADMIN_EMAIL=admin@insights.com
PGADMIN_PASSWORD=admin

REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

ARQ_MONITOR_PORT=8082

# Build target for Docker
BUILD_TARGET=development